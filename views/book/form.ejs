<%- include('../inc/head') %>
<%- include('../inc/header') %>
<div class="form-wrapper wrapper">
  <h3 class="title-wrap">
    <span class="bullet"></span> <%= title %>
  </h3>
  <form action="/book/save" method="POST" name="saveForm" onsubmit="return onSubmit(this);">
    <table>
      <tbody>
        <tr>
          <td class="title require">도서명</td>
          <td class="content">
            <input type="text" name="title" class="form-control" placeholder="도서명" autofocus>
          </td>
        </tr>
        <tr>
          <td class="title">저자</td>
          <td class="content">
            <input type="text" name="writer" class="form-control" placeholder="저자">
          </td>
        </tr>
        <tr>
          <td class="title">요약 설명</td>
          <td class="content">
            <textarea type="text" name="content" class="form-control" placeholder="요약설명"></textarea>
          </td>
        </tr>
        <tr>
          <td class="title">도서 커버</td>
          <td class="content">
            <input type="file" name="cover" class="form-control" placeholder="도서커버 이미지"></input>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="btn-wrap p-3 text-center">
      <button class="btn btn-success" id="btSave">저장</button>
      <button class="btn btn-danger" type="reset">다시 작성</button>
    </div>
  </form>
</div>
<%- include('../inc/foot') %>
